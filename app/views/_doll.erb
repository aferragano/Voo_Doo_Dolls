<div class="doll-block" id="<%= doll.id %>">
	<h2 class="doll-name"><%= doll.name %></h2>
	<button class="pin-it">pin it</button>
	<!-- <button class="story">story</button> -->
	<img src="/images/voodoo-doll.png">
	<span class="message">OWW!</span>
	<h1> <%= doll.pins %> </h1>
	<p class="story_text"><%= doll.story %></p>
	<% if session[:user_id] && doll.user && session[:user_id] == doll.user.id %>
		<form action="/doll/<%= doll.id %>"  method="POST" class="delete">
			<input type="hidden" name="_method" value="DELETE">
			<button>x</button>
		</form>
	<% end %>
</div>